---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  src: ImageMetadata;
  alt?: string;
  className?: string;
  sizes?: string;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
}

const {
  src,
  alt = 'Profile picture',
  className = '',
  sizes = '(max-width: 640px) 72vw, (max-width: 1024px) 40vw, 240px',
  loading = 'eager',
  fetchpriority = 'high',
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  loading={loading}
  fetchpriority={fetchpriority}
  class={`h-60 w-60 rounded-full object-cover shadow-lg ring-4 ring-cyan-200 transition-all duration-300 hover:scale-105 hover:shadow-xl sm:h-40 sm:w-40 md:h-56 md:w-56 dark:ring-cyan-400/70 ${className}`}
  sizes={sizes}
/>
