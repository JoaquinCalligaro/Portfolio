---
import LocalizedText from '../language/LocalizedText.astro';

export interface Props {
  name?: string;
  description?: string;
  nameKey?: string;
  descriptionKey?: string;
  className?: string;
}

const {
  name = '',
  description = '',
  nameKey = 'personal.name',
  descriptionKey = 'personal.description',
  className = '',
} = Astro.props;

const nameFallback = name || 'Joaquin Calligaro';
const descriptionFallback =
  description ||
  'Hola, soy un desarrollador frontend que disfruta transformar ideas en interfaces claras y funcionales. ' +
    'Actualmente exploro proyectos web y m√≥viles con un estilo moderno y enfocado en la experiencia del usuario. ' +
    'Te invito a ver mi trabajo.';
---

<div
  class={`flex flex-col gap-5 text-center sm:gap-5 md:gap-5 md:text-left xl:gap-0 ${className}`}
>
  <h1
    class="text-4xl font-bold text-gray-950 md:text-6xl xl:mb-10 dark:text-gray-100"
  >
    <LocalizedText key={nameKey} fallback={nameFallback} />
  </h1>
  <p
    class="max-w-3xl text-lg leading-relaxed text-gray-950 xl:mb-10 dark:text-gray-100"
  >
    <LocalizedText key={descriptionKey} fallback={descriptionFallback} />
  </p>
</div>
