---
/**
 * GlassProjectCard
 * Componente reutilizable para mostrar un proyecto con estilo glassmorphism.
 */
const {
  title = 'Background Generator',
  description = 'Background Generator',
  img = '',
  href = '#',
} = Astro.props;
---

<!-- Contenedor principal: glassmorphism con Tailwind (incluye variantes dark) -->
<article
  class={`w-full  rounded-xl overflow-hidden transition-transform duration-150 transform  shadow-sm bg-white/60 dark:bg-gray-900/50 backdrop-blur-md dark:backdrop-blur-sm border border-white/20 dark:border-white/10`}
  aria-labelledby="card-title"
>
  <!-- Media: imagen o placeholder -->
  <div class="relative min-h-20">
    {
      img ? (
        <img src={img} alt={title} class="h-56 w-full object-cover" />
      ) : (
        <div class="h-56 w-full bg-gradient-to-br from-gray-100 to-gray-50 dark:from-gray-800 dark:to-gray-700" />
      )
    }
    <!-- Overlay sutil para contraste -->
    <div
      class="pointer-events-none absolute inset-0 bg-gradient-to-b from-transparent to-black/10 dark:to-black/20"
      aria-hidden
    >
    </div>
  </div>

  <!-- Contenido: título y descripción -->
  <div class="p-4">
    <div class="flex items-center">
      <h3
        id="card-title"
        class="text-lg font-semibold text-gray-900 dark:text-white"
      >
        {title}
      </h3>
    </div>

    <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{description}</p>
  </div>

  <!-- Botón centrado -->
  <div class="flex items-center justify-center pt-3 pb-4">
    <a
      href={href}
      class="inline-block rounded-md bg-slate-800 px-4 py-2 text-sm text-white transition hover:bg-slate-700"
      target="_blank"
      rel="noopener noreferrer">Ver Repositorio</a
    >
  </div>
</article>
