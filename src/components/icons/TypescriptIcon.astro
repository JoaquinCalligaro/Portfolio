---
export interface Props {
  class?: string;
  title?: string;
  wrapperClass?: string;
  glow?: boolean;
}
const {
  class: cls = 'h-6 w-6',
  title = 'TypeScript',
  wrapperClass = null,
  glow = true,
} = Astro.props;
import '../../styles/projects.css';
const base =
  'inline-flex items-center justify-center p-1 rounded-md transition-colors duration-200 mr-2';
const hover = 'hover:bg-blue-50 dark:hover:bg-blue-900';
const wrapper =
  wrapperClass ??
  `${base} ${hover} ${glow ? 'glow-effect' : ''} icon-typescript`;
---

<span class={wrapper} aria-hidden="true">
  <img
    src="/src/assets/svg/typescript.svg"
    class={cls}
    alt={title}
    loading="lazy"
  />
</span>
