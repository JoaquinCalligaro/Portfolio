---
import { Image } from 'astro:assets';
import reactSvg from '../../assets/svg/react.svg';

export interface Props {
  class?: string;
  title?: string;
  wrapperClass?: string;
  glow?: boolean;
}
const {
  class: cls = 'h-6 w-6',
  title = 'React',
  wrapperClass = null,
  glow = true,
} = Astro.props;
import '../../styles/projects.css';
const base =
  'inline-flex items-center justify-center p-1 rounded-md transition-colors duration-200 mr-2';
const hover = 'hover:bg-cyan-50 dark:hover:bg-cyan-900';
const wrapper =
  wrapperClass ?? `${base} ${hover} ${glow ? 'glow-effect' : ''} icon-react`;
---

<!-- ReactIcon: usa el SVG estÃ¡tico desde assets y permite clases Tailwind -->
<span class={wrapper} aria-hidden="true">
  <Image src={reactSvg} class={cls} alt={title} loading="lazy" />
</span>
