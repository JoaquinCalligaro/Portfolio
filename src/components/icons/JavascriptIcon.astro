---
export interface Props {
  class?: string;
  title?: string;
  wrapperClass?: string;
}
const { class: cls = 'h-6 w-6', title = 'JavaScript' } = Astro.props;
import '../../styles/icon-effects.css';
const wrapper =
  Astro.props.wrapperClass ??
  'inline-flex items-center justify-center p-1 rounded-md transition-colors duration-200 hover:bg-yellow-50 dark:hover:bg-yellow-900 mr-2 glow-effect icon-js';
---

<!-- JavascriptIcon: usa el SVG estÃ¡tico desde public/svg y permite clases Tailwind -->
<span class={wrapper} aria-hidden="true">
  <img src="/svg/Javascript.svg" class={cls} alt={title} loading="lazy" />
</span>
