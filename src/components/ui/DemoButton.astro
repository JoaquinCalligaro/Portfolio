---
import { Image } from 'astro:assets';
const { href = '#', label = 'Demo', className = '' } = Astro.props;
import liveSvg from '../../assets/Live.svg';
---

<a
  href={href}
  class={`inline-flex items-center gap-2 rounded-lg border border-blue-300 bg-blue-50 px-4 py-2 text-sm font-medium text-blue-800 transition-all hover:border-blue-600/50 hover:bg-blue-600/50 hover:text-white dark:border-blue-600/50 dark:bg-blue-900/30 dark:text-blue-300 dark:hover:bg-blue-600/50 dark:hover:text-white ${className}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <Image src={liveSvg} alt="Demo" class="h-4 w-4" loading="lazy" />
  <span>{label}</span>
</a>
