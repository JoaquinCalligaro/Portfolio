---
import { Image } from 'astro:assets';
const { href = '#', label = 'Repositorio', className = '' } = Astro.props;
import gitSvg from '../../assets/GitHub.svg';
---

<a
  href={href}
  class={`inline-flex items-center gap-2 rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-800 transition-all hover:border-slate-800 hover:bg-slate-800 hover:text-white dark:border-gray-600 dark:bg-gray-400/10 dark:text-slate-100 dark:hover:bg-gray-600 ${className}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <Image src={gitSvg} alt="GitHub" class="h-4 w-4" loading="lazy" />
  <span>{label}</span>
</a>
