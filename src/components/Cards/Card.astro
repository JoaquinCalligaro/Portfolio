---
// Sección: Card
// Propósito: wrapper reutilizable que recibe `className` y lo aplica.
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

// Clases separadas para `class:list`
const splitClasses = className.split(' ');
---

<div
  class="flex w-full flex-col gap-2 border border-gray-300 bg-white p-6 shadow-sm dark:border-neutral-800 dark:bg-gray-950/30"
  class:list={splitClasses}
>
  <slot />
</div>
