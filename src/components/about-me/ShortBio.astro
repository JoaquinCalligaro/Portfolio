---
import GitHubBtn from '../ui/GitHubBtn.astro';
import LinkedInBtn from '../ui/LinkedInBtn.astro';
import { getAboutMe } from '../../data/translations';
import CvDownloadBtn from '../ui/CvDownloadBtn.astro';
import '../../styles/about.css';
const t = getAboutMe('ES');
---

<article class="flex flex-col gap-6 md:flex-row">
  <!-- Bio y CV -->
  <div
    class="about-card-root flex-1 rounded-xl bg-gray-100/30 p-10 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg dark:bg-gray-900/30"
  >
    <div class="about-card-inner flex flex-col gap-6">
      <div class="flex flex-col gap-4">
        <h3
          class="flex items-center gap-2 text-lg font-semibold text-gray-950 sm:text-xl dark:text-white"
        >
          <span data-i18n-key="aboutMe.shortBio.heading"
            >{t.shortBio.heading}</span
          >
          <span class="text-2xl">ðŸ§¬</span>
        </h3>
        <div class="space-y-4 text-sm text-black sm:text-base dark:text-white">
          {
            t.shortBio.paragraphs.map((p, i) => (
              <p
                class="leading-relaxed"
                data-i18n-key={`aboutMe.shortBio.paragraphs.${i}`}
              >
                {p}
              </p>
            ))
          }
        </div>
      </div>

      <!-- CV Download y Redes Sociales -->
      <div class="flex flex-nowrap items-center gap-3">
        <CvDownloadBtn />
        <GitHubBtn />
        <LinkedInBtn />
      </div>
    </div>
  </div>
</article>
