---
// LinkedIn Button Component with Glassmorphism Effect
const {
  href = 'https://www.linkedin.com/in/joaquincalligaro/',
  label = null,
  className = '',
} = Astro.props;
---

<a
  href={href}
  class={`inline-flex items-center glassmorph-effect rounded-lg border border-blue-300 bg-blue-200/50 px-2 py-2 text-sm font-medium text-blue-800 transition-all hover:border-blue-600/50 hover:bg-blue-600/50 hover:text-white dark:border-blue-600/50 dark:bg-blue-900/30 dark:text-blue-300 dark:hover:bg-blue-600/40 dark:hover:text-white ${className}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <svg
    class="h-4 w-4"
    viewBox="0 0 24 24"
    fill="currentColor"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
    ></path>
  </svg>
  <span class="xl:25 inline-block w-22 text-center sm:w-22 md:w-24"
    >{label ?? 'LinkedIn'}</span
  >
</a>
