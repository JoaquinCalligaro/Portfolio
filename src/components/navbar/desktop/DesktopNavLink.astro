---
import LocalizedText from '../../language/LocalizedText.astro';

interface Props {
  id: string;
  target: string;
  textKey: string;
  fallback: string;
}
const { id, target, textKey, fallback } = Astro.props;
---

<label
  for={id}
  data-target={target}
  class="cursor-pointer px-4 py-2 font-medium text-gray-700 transition-colors hover:text-amber-600 dark:text-gray-300"
>
  <LocalizedText key={textKey} fallback={fallback} />
</label>
