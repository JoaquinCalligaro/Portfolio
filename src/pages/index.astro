---
// index.astro - Refactorizado usando principalmente Tailwind
import Card from '../components/Cards/Card.astro';
import Layout from '../layouts/Layout.astro';
import TimelineItem from '../components/TimelineItem.astro';
import Project from '../components/Project.astro';
import CardService from '../components/Cards/CardService.astro';
import TechStack from '../components/TechStack/TechStack.astro';
import EXPERIENCES from '../assets/collections/experiences.json';
import PROJECTS from '../assets/collections/projects.json';
import SERVICES from '../assets/collections/services.json';
import HireServiceModal from '../components/HireServiceModal.astro';
import PersonalPresentation from '../components/PersonalPresentation.astro';
import '../styles/global.css';
---

<Layout>
  <!-- Secci贸n Hero -->
  <div>
    <PersonalPresentation />
  </div>
  <section id="home" class="flex flex-col py-20">
    <article class="mx-auto text-pretty text-gray-950 dark:text-white">
      <!-- Tech Stack Section -->
      <div class="mt-5 mb-10 w-full">
        <TechStack className="w-full" />
      </div>

      <!-- Secci贸n Proyectos -->
      <section id="projects" class="flex flex-col py-16">
        <h2
          class="mb-10 flex justify-center text-2xl font-bold tracking-tight text-gray-950 md:text-4xl dark:text-white"
        >
          Mis Proyectos
        </h2>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {
            PROJECTS.filter((__, i) => i < 3).map((project) => (
              <div class="transition-all duration-300 hover:-translate-y-1">
                <Project project={project} />
              </div>
            ))
          }
        </div>
        <div class="mt-8 flex justify-center">
          <a
            role="button"
            href="/projects"
            class="inline-flex items-center gap-2 rounded-full border-2 border-transparent bg-blue-600 px-6 py-3 text-base font-semibold text-white transition-all duration-300 hover:-translate-y-0.5 hover:border-blue-600 hover:bg-transparent hover:text-blue-600 hover:shadow-lg dark:bg-blue-800 dark:hover:border-blue-400 dark:hover:bg-transparent dark:hover:text-blue-400"
          >
            Ver todos los proyectos
            <svg
              class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </section>

      <!-- Preview de Proyectos -->
      <div class="flex flex-col gap-6">
        <h2
          class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl dark:text-white"
        >
          Mis Proyectos Destacados
        </h2>
        <div class="grid gap-6 sm:grid-cols-2">
          <!-- Proyecto 1 -->
          <Card
            className="group transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
          >
            <div
              class="mb-4 grid w-fit place-content-center rounded-full bg-blue-50 p-4 text-blue-500 transition-all duration-300 group-hover:scale-110 group-hover:bg-blue-100 dark:bg-blue-950/30 dark:text-blue-400 dark:group-hover:bg-blue-900/50"
            >
              <svg
                class="h-8 w-8"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 640 512"
              >
                <path
                  d="M128 32C92.7 32 64 60.7 64 96l0 256 64 0 0-256 384 0 0 256 64 0 0-256c0-35.3-28.7-64-64-64L128 32zM19.2 384C8.6 384 0 392.6 0 403.2C0 445.6 34.4 480 76.8 480l486.4 0c42.4 0 76.8-34.4 76.8-76.8c0-10.6-8.6-19.2-19.2-19.2L19.2 384z"
                ></path>
              </svg>
            </div>
            <h3
              class="mb-3 text-lg font-semibold text-gray-900 transition-colors duration-300 group-hover:text-blue-600 sm:text-xl md:text-2xl dark:text-white dark:group-hover:text-blue-400"
            >
              Proyecto 1
            </h3>
            <p
              class="text-sm leading-relaxed text-gray-600 sm:text-base dark:text-gray-400"
            >
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quas
              iusto tempore ratione. Deserunt ratione eligendi saepe.
              Voluptatibus in odit maxime asperiores ipsum vitae, illum, neque,
              veniam consequuntur earum ab! Perspiciatis!
              <span class="font-medium text-blue-600 dark:text-blue-400"
                >Angular and Astro</span
              >.
            </p>
          </Card>

          <!-- Proyecto 2 -->
          <Card
            className="group transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
          >
            <div
              class="mb-4 grid w-fit place-content-center rounded-full bg-yellow-50 p-4 text-yellow-500 transition-all duration-300 group-hover:scale-110 group-hover:bg-yellow-100 dark:bg-yellow-950/30 dark:text-yellow-400 dark:group-hover:bg-yellow-900/50"
            >
              <svg
                class="h-8 w-8"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 512 512"
              >
                <path
                  d="M64 32C28.7 32 0 60.7 0 96l0 64c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-64c0-35.3-28.7-64-64-64L64 32zm280 72a24 24 0 1 1 0 48 24 24 0 1 1 0-48zm48 24a24 24 0 1 1 48 0 24 24 0 1 1 -48 0zM64 288c-35.3 0-64 28.7-64 64l0 64c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-64c0-35.3-28.7-64-64-64L64 288zm280 72a24 24 0 1 1 0 48 24 24 0 1 1 0-48zm56 24a24 24 0 1 1 48 0 24 24 0 1 1 -48 0z"
                ></path>
              </svg>
            </div>
            <h3
              class="mb-3 text-lg font-semibold text-gray-900 transition-colors duration-300 group-hover:text-yellow-600 sm:text-xl md:text-2xl dark:text-white dark:group-hover:text-yellow-400"
            >
              Proyecto 2
            </h3>
            <p
              class="text-sm leading-relaxed text-gray-600 sm:text-base dark:text-gray-400"
            >
              Lorem ipsum dolor sit amet consectetur, adipisicing elit. Illo,
              enim, alias quis sed iure sapiente vitae quibusdam cum a dolores
              tenetur error. Repudiandae aliquid, officiis ullam architecto
              eligendi beatae unde.
              <span class="font-medium text-yellow-600 dark:text-yellow-400"
                >NestJS and Express</span
              >.
            </p>
          </Card>
        </div>
      </div>
    </article>
  </section>

  <!-- Secci贸n Sobre M铆 -->
  <section id="about" class="flex flex-col py-16">
    <h2
      class="mb-8 text-2xl font-bold tracking-tight text-gray-950 md:text-4xl dark:text-white"
    >
      Sobre M铆
    </h2>
    <article class="flex flex-col gap-6 md:flex-row">
      <!-- Bio y CV -->
      <Card
        className="flex-1 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
      >
        <div class="flex flex-col gap-6">
          <div class="flex flex-col gap-4">
            <h3
              class="flex items-center gap-2 text-lg font-semibold text-gray-950 sm:text-xl dark:text-white"
            >
              Short Bio
              <span class="text-2xl">К</span>
            </h3>
            <div
              class="space-y-4 text-sm text-gray-600 sm:text-base dark:text-gray-400"
            >
              <p class="leading-relaxed">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Iure
                illo distinctio inventore illum consequuntur eveniet nobis
                officiis sequi aspernatur optio nulla, quisquam sit voluptatibus
                velit cum, minima excepturi, numquam explicabo.
              </p>
              <p class="leading-relaxed">
                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Enim
                molestias adipisci illum quam eaque perspiciatis saepe rerum
                voluptates cum consectetur? Accusantium reiciendis adipisci
                error corrupti pariatur exercitationem quaerat porro eveniet!
              </p>
              <p class="leading-relaxed">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vel
                animi enim rerum perferendis. Distinctio itaque dolores mollitia
                id, vitae necessitatibus earum sed maxime illum sequi impedit
                nihil. Minus, quos non!
              </p>
            </div>
          </div>

          <!-- CV Download -->
          <div class="flex flex-col gap-3">
            <h3
              class="text-lg font-semibold text-gray-950 sm:text-xl dark:text-white"
            >
              Informaci贸n CV
            </h3>
            <a
              href="/docs/cv.pdf"
              role="button"
              aria-label="Descargar CV"
              download
              class="inline-flex w-fit items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 font-semibold text-white transition-all duration-300 hover:-translate-y-0.5 hover:bg-blue-700 hover:shadow-lg focus:ring-4 focus:ring-blue-200 focus:outline-none dark:bg-blue-700 dark:hover:bg-blue-800 dark:focus:ring-blue-900"
            >
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
              Descargar CV
            </a>
          </div>
        </div>
      </Card>

      <!-- Timeline de Experiencia -->
      <Card
        className="flex-1 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
      >
        <h3
          class="mb-6 text-lg font-semibold text-gray-950 sm:text-xl dark:text-white"
        >
          Experiencia Profesional
        </h3>
        <ol class="relative border-s-2 border-gray-300 dark:border-neutral-700">
          {
            EXPERIENCES.map((experience) => (
              <TimelineItem
                title={experience.company}
                description={experience.description}
                date={experience.dates}
              >
                <div
                  slot="icon"
                  class="flex h-full w-full items-center justify-center p-1 transition-all duration-300 group-hover:scale-110"
                  set:html={experience.svgIcon}
                />
              </TimelineItem>
            ))
          }
        </ol>
      </Card>
    </article>
  </section>

  <!-- Secci贸n Servicios -->
  <section id="services" class="flex flex-col overflow-hidden py-16">
    <h2
      class="mb-8 text-2xl font-bold tracking-tight text-gray-950 md:text-4xl dark:text-white"
    >
      Mis Servicios
    </h2>
    <article class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        SERVICES.map((service) => (
          <div class="transition-all duration-300 hover:-translate-y-1">
            <CardService service={service} />
          </div>
        ))
      }
    </article>
  </section>

  <HireServiceModal />
</Layout>

<script>
  import { animate, inView, stagger } from 'motion';

  document.addEventListener('DOMContentLoaded', () => {
    // Animaci贸n para servicios
    inView('#services', () => {
      animate(
        '.card-service',
        {
          opacity: [0, 1],
          transform: ['translateY(50px)', 'translateY(0px)'],
        },
        {
          delay: stagger(0.15),
          duration: 0.6,
          easing: [0.4, 0, 0.2, 1],
        }
      );
    });

    // Animaci贸n para tech stack
    inView('.tech-stack-card', () => {
      animate(
        '.tech-card-enter',
        {
          opacity: [0, 1],
          transform: ['translateY(30px)', 'translateY(0px)'],
        },
        {
          delay: stagger(0.1),
          duration: 0.5,
          easing: [0.4, 0, 0.2, 1],
        }
      );
    });

    // Animaci贸n para proyectos
    inView('#projects', () => {
      animate(
        '#projects .grid > div',
        {
          opacity: [0, 1],
          transform: ['translateY(40px)', 'translateY(0px)'],
        },
        {
          delay: stagger(0.2),
          duration: 0.6,
          easing: [0.4, 0, 0.2, 1],
        }
      );
    });
  });
</script>
