---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import TimelineItem from '../components/TimelineItem.astro';
import Project from '../components/Project.astro';
import CardService from '../components/CardService.astro';
import TechStack from '../components/TechStack/TechStack.astro';
import EXPERIENCES from '../assets/collections/experiences.json';
import PROJECTS from '../assets/collections/projects.json';
import SERVICES from '../assets/collections/services.json';
import HireServiceModal from '../components/HireServiceModal.astro';
import meImage from '../assets/me.webp';
import '../styles/global.css';
---

<Layout>
  <section id="home" class="flex flex-col py-20">
    <article class="mx-auto text-pretty text-gray-950 dark:text-white">
      <div class="mb-12 flex flex-col items-center gap-8 md:flex-row">
        <img
          src={meImage.src}
          alt="Joaquin Calligaro"
          class="h-48 w-48 rounded-full sm:h-72 sm:w-72 md:h-56 md:w-56"
        />
        <div class="flex flex-col gap-4 text-center md:text-left">
          <h1 class="text-4xl font-bold md:text-6xl">Joaquin Calligaro</h1>
